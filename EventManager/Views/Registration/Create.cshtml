@model EventManager.Models.ViewModels.RegistrationAddViewModel

<div class="container">
    <div class="row justify-content-md-center formContainer">
        <div class='col-sm-12 col-lg-10'>
            <div class="row formHeaderRow">
                <div class="col-sm-12">
                    <h2 class="formHeader-heading">Create an Registration</h2>
                    <p class="formHeader-description">
                        Select the Event and User to create a new Registration.
                    </p>
                    <a asp-action="Index"><i class="ion-md-arrow-round-back"></i> Back to List</a>
                </div>
            </div>
            <hr />
            <form asp-action="Create" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label asp-for="SelectedEventId" class="control-label"></label>
                        <select asp-for="SelectedEventId" asp-items="Model.Events" class="form-control">
                            <option value="0">No Event Selected</option>
                        </select>
                        <span asp-validation-for="SelectedEventId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label asp-for="SelectedUserId" class="control-label"></label>
                        <select asp-for="SelectedUserId" asp-items="Model.Users" class="form-control">
                            <option value="0">No User Selected</option>
                        </select>
                        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label asp-for="SelectedRegistrationStatus" class="control-label"></label>
                        <select asp-for="SelectedRegistrationStatus" asp-items="Model.RegistrationStatuses" class="form-control">
                            <option value="">No Status Selected</option>
                        </select>
                        <span asp-validation-for="SelectedRegistrationStatus" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="row formControlRow">
                    <div class="col-sm-12 form-group">
                        <a href="@ViewBag.ReturnUrl" class="btn btn-sm btn-default">Cancel</a>
                        <a asp-action="Create" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-sm btn-warning">Reset</a>
                        <input type="submit" value="Create" class="btn btn-sm btn-primary" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
