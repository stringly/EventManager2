@model EventManager.Models.ViewModels.EventSeriesEditViewModel

<div class="container">
    <div class="row justify-content-md-center formContainer">
        <div class='col-sm-12 col-lg-10'>
            <div class="row formHeaderRow">
                <div class="col-sm-12">
                    <h2 class="formHeader-heading">Event Series Details</h2>
                    <p class="formHeader-description">
                        Showing details for this Event Series.
                    </p>
                    <a asp-action="Index"><i class="ion-md-arrow-round-back"></i> Back to List</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-6 form-group">
                    <strong>@Html.DisplayNameFor(model => model.Title)</strong><br />
                    <span>@Html.DisplayFor(model => model.Title)</span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    <strong>@Html.DisplayNameFor(model => model.Description)</strong><br />
                    <p>@Model.Description</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    <strong>Events in this Event Series</strong>
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-sm table-light subTable">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Type                                        
                                    </th>                                    
                                    <th>
                                        Start
                                    </th>
                                    <th>
                                        End
                                    </th>
                                    <th>
                                        Creator
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Events.Count() > 0)
                                {
                                    foreach (EventIndexViewModelEventItem e in Model.Events)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@e.EventId" asp-controller="Event" asp-route-returnUrl="/EventSeries/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")">@e.EventTitle</a>
                                            </td>
                                            <td>
                                                @e.EventTypeName
                                            </td>
                                            <td>
                                                @e.StartDate
                                            </td>
                                            <td>
                                                @e.EndDate
                                            </td>
                                            <td>
                                                @e.CreatedByUserDisplayName
                                            </td>
                                            <td>
                                                @e.Status
                                            </td>
                                            <td class="text-right">
                                                <a asp-action="Details" asp-route-id="@e.EventId" asp-route-returnUrl="/EventSeries/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="View Details" class="glyphicon-ring">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@e.EventId" asp-route-returnUrl="/EventSeries/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="Edit Event" class="glyphicon-ring">
                                                    <i class="fas fa-pen-square"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@e.EventId" asp-route-returnUrl="/EventSeries/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="Delete Event" class="glyphicon-ring">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No Events Assigned to this Event Series.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row formControlRow">
                <div class="col-sm-12 form-group">
                    <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="/EventSeries/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-returnUrl="/EventSeries/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" class="btn btn-danger">Delete</a>                    
                </div>
            </div>
        </div>
    </div>
</div>