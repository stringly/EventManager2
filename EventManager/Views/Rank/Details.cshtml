@model EventManager.Models.ViewModels.RankEditViewModel

<div class="container">
    <div class="row justify-content-md-center formContainer">
        <div class='col-sm-12 col-lg-10'>
            <div class="row formHeaderRow">
                <div class="col-sm-12">
                    <h2 class="formHeader-heading">Rank Details</h2>
                    <p class="formHeader-description">
                        Showing details for the selected Rank.
                    </p>
                    <a asp-action="Index"><i class="ion-md-arrow-round-back"></i> Back to List</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-6 form-group">
                    <strong>@Html.DisplayNameFor(model => model.Short)</strong><br />
                    <span>@Html.DisplayFor(model => model.Short)</span>
                </div>
                <div class="col-sm-6 form-group">
                    <strong>@Html.DisplayNameFor(model => model.Long)</strong><br />
                    <span>@Html.DisplayFor(model => model.Long)</span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-sm table-light">
                            <thead>
                                <tr>
                                    <th>
                                        UserId
                                    </th>
                                    <th>
                                        BlueDeckId
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        ID Number
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users.Count() > 0)
                                {
                                    foreach (UserIndexViewModelUserItem u in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-controller="User" asp-route-id="@u.UserId" asp-route-returnUrl="/Rank/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")">@u.UserId</a>
                                            </td>
                                            <td>
                                                @u.BlueDeckId
                                            </td>
                                            <td>
                                                @u.LastName
                                            </td>
                                            <td>
                                                @u.FirstName
                                            </td>
                                            <td>
                                                @u.IdNumber
                                            </td>
                                            <td class="text-right">
                                                <a asp-action="Details" asp-route-id="@u.UserId" asp-route-returnUrl="/Rank/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="View Details" class="glyphicon-ring">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@u.UserId" asp-route-returnUrl="/Rank/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="Edit User" class="glyphicon-ring">
                                                    <i class="fas fa-pen-square"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@u.UserId" asp-route-returnUrl="/Rank/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="Delete User" class="glyphicon-ring">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No Users assigned to this Rank.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row formControlRow">
                <div class="col-sm-12 form-group">
                    <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-returnUrl="/Rank/Details/@Model.Id@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" class="btn btn-danger">Delete</a>                    
                </div>
            </div>
        </div>
    </div>
</div>
