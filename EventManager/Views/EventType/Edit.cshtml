@model EventManager.Models.ViewModels.EventTypeDetailsViewModel

<div class="container">
    <div class="row justify-content-md-center formContainer">
        <div class='col-sm-12 col-lg-10'>
            <div class="row formHeaderRow">
                <div class="col-sm-12">
                    <h2 class="formHeader-heading">Edit an Event Type</h2>
                    <p class="formHeader-description">
                        An Event Type is a category to which an Event can be assigned. Update the Event Type name below.
                    </p>
                    <a asp-action="Index"><i class="ion-md-arrow-round-back"></i> Back to List</a>
                </div>
            </div>
            <hr />
            <form asp-action="Edit" asp-route-id="@Model.EventTypeId" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="EventTypeId" />
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label asp-for="EventTypeName" class="control-label"></label>
                        <input asp-for="EventTypeName" class="form-control" />
                        <span asp-validation-for="EventTypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 form-group">
                        <strong>Events with this Event Type</strong>
                        <div class="table-responsive-sm">
                            <table class="table table-striped table-sm table-light subTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Type
                                        </th>
                                        <th>
                                            Start
                                        </th>
                                        <th>
                                            End
                                        </th>
                                        <th>
                                            Creator
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                        <th>

                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Events.Count() > 0)
                                    {
                                        foreach (EventIndexViewModelEventItem e in Model.Events)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@e.EventId" asp-controller="Event" asp-route-returnUrl="/EventType/Edit/@Model.EventTypeId@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")">@e.EventTitle</a>
                                                </td>
                                                <td>
                                                    @e.EventTypeName
                                                </td>
                                                <td>
                                                    @e.StartDate
                                                </td>
                                                <td>
                                                    @e.EndDate
                                                </td>
                                                <td>
                                                    @e.CreatedByUserDisplayName
                                                </td>
                                                <td>
                                                    @e.Status
                                                </td>
                                                <td class="text-right">
                                                    <a asp-action="Details" asp-route-id="@e.EventId" asp-route-returnUrl="/EventType/Edit/@Model.EventTypeId@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="View Details" class="glyphicon-ring">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@e.EventId" asp-route-returnUrl="/EventType/Edit/@Model.EventTypeId@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="Edit Event" class="glyphicon-ring">
                                                        <i class="fas fa-pen-square"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@e.EventId" asp-route-returnUrl="/EventType/Edit/@Model.EventTypeId@(!String.IsNullOrEmpty(Context.Request.QueryString.ToString()) ? $"{Context.Request.QueryString}" : "")" title="Delete Event" class="glyphicon-ring">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center">No Events Assigned to this Event Type.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row formControlRow">
                    <div class="col-sm-4 form-group">
                        <a href="@ViewBag.ReturnUrl" class="btn btn-default">Cancel</a>
                        <a asp-action="Edit" asp-route-id="@Model.EventTypeId" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-warning">Reset</a>
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>